<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data kontak tidak tersedia.
        <br><a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke halaman kontak</a>.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <div class="d-flex justify-content-between">
            <a href="/contact" class="btn btn-primary me-2">&laquo; Contacts</a>
            <a href="/" class="btn btn-success">Home</a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>